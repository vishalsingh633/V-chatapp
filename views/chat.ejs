<body>
  <div class="navbar">
    <h2>Room: <%= room.name %></h2>

    <!-- Hamburger for small screens -->
    <div class="hamburger" onclick="toggleMenu()">
      <div></div>
      <div></div>
      <div></div>
    </div>

    <div class="nav-buttons">
      <form action="/room/end/<%= room._id %>" method="POST" style="display:inline;">
        <button type="submit">End Room</button>
      </form>
      <form action="/room/leave" method="POST" style="display:inline;">
        <button type="submit">Exit</button>
      </form>
    </div>
  </div>

  <!-- Mobile dropdown -->
  <div class="mobile-menu" id="mobileMenu">
    <form action="/room/end/<%= room._id %>" method="POST">
      <button type="submit">End Room</button>
    </form>
    <form action="/room/leave" method="POST">
      <button type="submit">Exit</button>
    </form>
    <div class="members active" id="mobileMembers">
      <h3>Members</h3>
      <ul id="member-list-mobile">
        <% room.members.forEach(member => { %>
          <li><%= member.username %></li>
        <% }) %>
      </ul>
    </div>
  </div>

  <div class="chat-container">
    <!-- Desktop members list -->
    <div class="members" id="desktopMembers">
      <h3>Members</h3>
      <ul id="member-list">
        <% room.members.forEach(member => { %>
          <li><%= member.username %></li>
        <% }) %>
      </ul>
    </div>

    <div class="chat">
      <div id="chat-area">
        <div id="messages"></div>
        <form id="msg-form">
          <input type="text" id="msg" autocomplete="off" placeholder="Type a message" />
          <button type="submit">Send</button>
        </form>
      </div>
    </div>
    

  <script>
    const socket = io();
    const roomId = "<%= room._id %>";
    const currentUserId = "<%= user._id %>";
    const currentUsername = "<%= user.username %>";

    socket.emit("join-room", { roomId, user: { _id: currentUserId, username: currentUsername } });

    const form = document.getElementById("msg-form");
    const msgInput = document.getElementById("msg");
    const messages = document.getElementById("messages");
    const memberList = document.getElementById("member-list");
    const memberListMobile = document.getElementById("member-list-mobile");

    form.addEventListener("submit", e => {
      e.preventDefault();
      const msg = msgInput.value.trim();
      if (msg) {
        socket.emit("send-message", { roomId, message: msg, user: { _id: currentUserId, username: currentUsername } });
        msgInput.value = "";
      }
    });

    socket.on("receive-message", ({ message, user }) => {
      const div = document.createElement("div");
      div.classList.add("message");
      div.classList.add(user._id === currentUserId ? "message-right" : "message-left");
      div.innerHTML = `<strong>${user.username}</strong><br>${message}`;
      messages.appendChild(div);
      messages.scrollTop = messages.scrollHeight;
    });

    socket.on("update-member-list", members => {
      memberList.innerHTML = "";
      memberListMobile.innerHTML = "";
      members.forEach(member => {
        const li = document.createElement("li");
        li.textContent = member.username;
        memberList.appendChild(li);
        memberListMobile.appendChild(li.cloneNode(true));
      });
    });

    socket.on("room-ended", () => {
      alert("The room has ended.");
      window.location.href = "/room/dashboard";
    });

    function toggleMenu() {
      const menu = document.getElementById("mobileMenu");
      menu.style.display = menu.style.display === "flex" ? "none" : "flex";
    }
  </script>
</body>
